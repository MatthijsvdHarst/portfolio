<div class="md:hidden">
  <button
    id="menu-btn"
    class="rounded p-2"
    aria-label="Open navigation"
    aria-controls="mobile-nav"
    aria-expanded="false"
  >
    <span class="sr-only">Toggle navigation</span>
    â˜°
  </button>
  <nav id="mobile-nav" class="mt-2 hidden flex-col gap-2">
    <a href="#work" class="block rounded px-2 py-1 hover:bg-gray-100 focus:bg-gray-100">Work</a>
    <a href="#about" class="block rounded px-2 py-1 hover:bg-gray-100 focus:bg-gray-100">About</a>
  </nav>
</div>
<script is:inline>
  const btn = document.getElementById('menu-btn');
  const nav = document.getElementById('mobile-nav');
  btn?.addEventListener('click', () => {
    const expanded = btn.getAttribute('aria-expanded') === 'true';
    btn.setAttribute('aria-expanded', expanded ? 'false' : 'true');
    nav.classList.toggle('hidden');
  });
</script>
